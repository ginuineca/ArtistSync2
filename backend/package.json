{
  "type": "module",
  "name": "artistsync-backend",
  "version": "1.0.0",
  "description": "Backend for ArtistSync platform",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "exports": {
    ".": "./server.js",
    "./utils/*": "./utils/*.js",
    "./middleware/*": "./middleware/*.js",
    "./models/*": "./models/*.js",
    "./controllers/*": "./controllers/*.js",
    "./services/*": "./services/*.js",
    "./routes/*": "./routes/*.js",
    "./config/*": "./config/*.js",
    "./tests/*": "./tests/*.js"
  },
  "scripts": {
    "start": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node --optimize-for-size --max-old-space-size=4096 server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ci": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "babel . --out-dir dist --source-maps --ignore 'node_modules,dist,coverage,tests'",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docker:build": "docker build -t artistsync-backend .",
    "docker:push": "docker push artistsync-backend",
    "security:audit": "npm audit --audit-level=high",
    "performance:profile": "node --prof server.js"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": [
        "babel-jest",
        {
          "configFile": "./babel.config.cjs"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@babel|socket\\.io.*)/)"
    ],
    "testEnvironment": "node"
  },
  "keywords": [
    "music",
    "social",
    "platform",
    "artists",
    "collaboration"
  ],
  "author": "ArtistSync Team",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^8.0.1",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "validator": "^13.11.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.6.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^8.14.0",
    "nodemon": "^3.0.1",
    "redis-memory-server": "^0.7.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  }
}
