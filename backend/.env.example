# Server Configuration
PORT=5000
NODE_ENV=development
APP_NAME=ArtistSync
APP_DOMAIN=artistsync.com

# Database Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/artistsync?retryWrites=true&w=majority
MONGODB_URI_TEST=mongodb+srv://<username>:<password>@cluster.mongodb.net/artistsync_test
MONGO_CONNECTION_LIMIT=10
MONGO_SOCKET_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your_extremely_long_and_complex_secret_key
JWT_ACCESS_TOKEN_SECRET=your_access_token_secret
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=artistsync-uploads
AWS_S3_PRESIGNED_URL_EXPIRATION=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_ENABLED=true
REDIS_CACHE_TTL=3600

# Email Configuration
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@artistsync.com
FRONTEND_URL=http://localhost:3000

# SMTP Fallback Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=3600000  # 1 hour

# CORS Configuration
CORS_ORIGIN=https://artistsync.com,http://localhost:3000

# Monitoring and Logging
LOG_LEVEL=info

# Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_MFA=true
ENABLE_OAUTH=true

# Encryption
ENCRYPTION_KEY=your_256bit_encryption_key
ENCRYPTION_SALT=your_encryption_salt
